AWS_REGION=us-west-1

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info
LOG_DIR=logs
REDIS_URL=your_redis_url

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_DEVELOPER_ADS_TOKEN=your_google_developer_token

# Meta (Facebook) OAuth Credentials
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_BUSINESS_ID=your_meta_business_id

# Kakao OAuth Credentials
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# Naver OAuth Credentials  
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Amazon Advertising OAuth Credentials
AMAZON_CLIENT_ID=your_amazon_client_id
AMAZON_CLIENT_SECRET=your_amazon_client_secret

# TikTok OAuth Credentials
TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_APP_SECRET=your_tiktok_app_secret

# Amplify App Origin (for auth redirects)
AMPLIFY_APP_ORIGIN=http://localhost:3000
AMPLIFY_COGNITO_DOMAIN=your_cognito_domain
AMPLIFY_COGNITO_USER_POOL_ID=your_user_pool_id
AMPLIFY_USER_POOL_CLIENT_ID=your_client_id

# DynamoDB Table Names
OAUTH_STATE_TABLE_NAME=OauthState-your_env
PLATFORM_CREDENTIAL_TABLE_NAME=PlatformCredential-your_env
TEAM_INVITATION_TABLE_NAME=TeamInvitation-your_env
TEAM_MEMBER_TABLE_NAME=TeamMember-your_env
CAMPAIGN_TABLE_NAME=Campaign-your_env
CAMPAIGN_METRIC_TABLE_NAME=CampaignMetric-your_env
SYNC_LOG_TABLE_NAME=SyncLog-your_env

# Lambda Functions
PLATFORM_SYNC_FUNCTION_NAME=platform-sync-your_env

# PortOne Payment Integration (국내 신용카드)
NEXT_PUBLIC_PORTONE_STORE_ID=your_store_id
PORTONE_API_SECRET=your_api_secret
PORTONE_WEBHOOK_SECRET=your_webhook_secret

# KG이니시스 결제 채널 (PortOne V2)
NEXT_PUBLIC_PORTONE_CHANNEL_KEY_INICIS_DEV=your_dev_channel_key
NEXT_PUBLIC_PORTONE_CHANNEL_KEY_INICIS_PROD=your_prod_channel_key
PORTONE_INICIS_MID=your_merchant_id

# PayPal 직접 연동 (해외 결제)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
# 구독 플랜 ID (PayPal 대시보드에서 생성 후 추가)
PAYPAL_PLAN_ID_STANDARD=your_standard_plan_id
PAYPAL_PLAN_ID_PRO=your_pro_plan_id
