# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Cognito (User Authentication)
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_ID=ap-northeast-2_xxxxxxxxx
NEXT_PUBLIC_AWS_COGNITO_CLIENT_ID=your_cognito_client_id
NEXT_PUBLIC_AWS_COGNITO_REGION=ap-northeast-2

# AWS API Gateway
NEXT_PUBLIC_API_GATEWAY_URL=https://your-api-id.execute-api.ap-northeast-2.amazonaws.com/prod

# DynamoDB (Optional - for local development)
# DYNAMODB_ENDPOINT=http://localhost:4566  # LocalStack

# AWS KMS (for encrypting credentials)
AWS_KMS_KEY_ID=your-kms-key-id

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
